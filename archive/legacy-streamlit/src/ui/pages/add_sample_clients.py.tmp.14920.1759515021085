KEYWORDS_BY_COMPANY = {
    "TechVision Systems": ["TechVision", "TV Systems", "TechVision Inc"],
    "CloudScale Solutions": ["CloudScale", "Cloud Scale", "CloudScale Inc"],
    "HealthTech Innovations": ["HealthTech", "HT Innovations", "HealthTech Inc"],
