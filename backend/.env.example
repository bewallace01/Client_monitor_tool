# FastAPI Application
APP_NAME="Client Intelligence Monitor"
APP_VERSION="2.0.0"
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database
# For development with SQLite (no Docker required):
DATABASE_URL=sqlite:///./data/client_intelligence.db
USE_SQLITE=True

# For production with PostgreSQL (requires Docker or external PostgreSQL):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/client_intelligence
# USE_SQLITE=False

DATABASE_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# API Settings
API_V1_PREFIX=/api/v1
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100

# External APIs
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=
NEWSAPI_KEY=
USE_MOCK_APIS=True

# Scheduler
SCHEDULER_ENABLED=True
SCHEDULER_TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
