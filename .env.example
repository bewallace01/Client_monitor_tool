# =====================================================
# Client Intelligence Monitor - Environment Variables
# =====================================================
# Copy this file to .env and fill in your values

# ==============================================
# Application Mode
# ==============================================

# Demo mode (true/false) - Uses sample data for testing
DEMO_MODE=false

# Application mode (Development/Production)
APP_MODE=Development

# ==============================================
# Database Configuration
# ==============================================

# Database path (relative to project root)
DATABASE_PATH=data/client_intelligence.db

# Database connection timeout (seconds)
DB_TIMEOUT=30

# ==============================================
# API Configuration
# ==============================================

# Use mock APIs for testing (true/false)
# Set to true for testing without API keys
# Set to false to use real APIs
USE_MOCK_APIS=true

# Google Custom Search API
# Get your API key: https://console.cloud.google.com/
# Setup guide: docs/API_SETUP.md
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id-here

# NewsAPI
# Get your API key: https://newsapi.org/register
# Setup guide: docs/API_SETUP.md
NEWSAPI_KEY=your-newsapi-key-here

# API rate limiting
MAX_API_CALLS_PER_HOUR=100

# ==============================================
# Monitoring Configuration
# ==============================================

# Minimum relevance score (0.0 to 1.0)
# Events below this score will be filtered out
MIN_RELEVANCE_SCORE=0.5

# Scan lookback period (days)
# How many days back to look for news
SCAN_LOOKBACK_DAYS=7

# Events to fetch per scan
EVENTS_PER_SCAN=50

# Auto-scan interval (minutes)
# 0 = disabled, >0 = auto-scan every N minutes
AUTO_SCAN_INTERVAL=0

# ==============================================
# Email Notifications (Optional)
# ==============================================

# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# SMTP authentication
# For Gmail: Use App Password (not regular password)
# https://support.google.com/accounts/answer/185833
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email settings
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# ==============================================
# Streamlit Configuration
# ==============================================

# Server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Disable telemetry
STREAMLIT_TELEMETRY=false
STREAMLIT_EMAIL_CAPTURE=false

# ==============================================
# Performance & Caching
# ==============================================

# Cache TTL (time to live) in seconds
CACHE_TTL=3600

# Maximum cache entries
MAX_CACHE_ENTRIES=1000

# Events per page in UI
EVENTS_PER_PAGE=50

# Search result limit
SEARCH_LIMIT=100

# ==============================================
# Security (Optional)
# ==============================================

# Enable/disable features
ENABLE_BACKUP=true
ENABLE_EXPORT=true
ENABLE_DELETE=true

# Session timeout (minutes)
SESSION_TIMEOUT=60

# ==============================================
# Logging (Optional)
# ==============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# ==============================================
# Notes
# ==============================================

# 1. Never commit the .env file to version control
# 2. Keep API keys secure and rotate regularly
# 3. Use different API keys for dev/staging/production
# 4. See docs/API_SETUP.md for API configuration help
# 5. See docs/DEPLOYMENT.md for deployment guide
